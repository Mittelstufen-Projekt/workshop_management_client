import { Palette } from "Palette.slint";

import { VerticalBox, ComboBox, LineEdit, Button } from "std-widgets.slint";

import { ToggleSwitch } from "Widgets/ToggleSwitch.slint";
import { CheckBox } from "Widgets/CheckBox.slint";

import { LoginView } from "Views/LoginView.slint";
import { ProjectView } from "Views/ProjectView.slint";
import { ProjectManagement } from "Views/ProjectManagement.slint";
import { ProjectDetailView } from "Views/ProjectDetailView.slint";
import { LagerOverview } from "Views/LagerOverview.slint";

export component WorkshopClient inherits Window {
width: 1920px;
height: 1080px;

    // Properties
    in-out property<string> username;
    in-out property<string> password;
    in-out property<string> login_error;

    // Bools for views
    in-out property <bool> loginView: true;
    in-out property <bool> projectView: false;
    in-out property <bool> projectManagementView: false;
    in-out property <bool> projectDetailView: false;

    // Signals
    callback request-login();
    callback request-logout();

    // Variables for the window itself
    background: Palette.background-color;
    title: "Workshop Management Client";

    // Bar in the accent color for design purposes
    VerticalLayout {
        padding: 10px;
        Rectangle {
            width: parent.width - 20px;
            height: 2px;
            background: Palette.accent-color;
        }
    }


    // Actual content
    LoginView {
        request-login => {root.request-login();}
        username <=> root.username;
        password <=> root.password;
        login_error <=> root.login_error;
        visible: false;
    }
    ProjectView {
        request-logout => {root.request-logout();}
        //visible <=> root.projectView;
        visible: false;
    }
    ProjectManagement {
        //visible <=> root.projectManagementView;
        visible: false;
    }
    ProjectDetailView {
        //visible <=> root.projectDetailView;
        visible: false;
    }

    LagerOverview {
        visible: true;
    }

    // Bar in the accent color for design purposes
    VerticalLayout {
        padding-top: parent.height - 10px;
        padding: 10px;
        Rectangle {
            width: parent.width - 20px;
            height: 2px;
            background: Palette.accent-color;
        }
}
}
