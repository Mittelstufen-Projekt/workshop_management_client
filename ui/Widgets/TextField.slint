import { Palette } from "../Palette.slint";
import { TextEdit } from "std-widgets.slint";

export component TextField inherits Rectangle {
    property <length> customHeight;
    callback edited(string);
    customHeight: 30px;
    in-out property <string> text <=> lineEdit.text; // Text in the line edit
    width: 150px;
    height: customHeight;
    border-color: Palette.accent-color;
    border-width: 1px;
    border-radius: 5px;
    background: Palette.control-color;
    lineEdit := TextInput {
        vertical-alignment: center;
        height: parent.height - 2px;
        width: parent.width - 10px;
        font-size: Palette.font-size * 1px;
        opacity: 0.5;
        selection-background-color: Palette.accent-color;
        color: Palette.text-color;
        edited => {
            root.edited(lineEdit.text);
        }
    }
}