import { Palette } from "../Palette.slint";
import { HorizontalBox } from "std-widgets.slint";


export component RowBox inherits Rectangle {
    in-out property <string> label;
    HorizontalBox {
        Rectangle {
            border-radius: 8px;
            border-color: black;
            background: white;
            border-width: 2px;
            height: 50px;
            width: 100px;
            Text {
                font-size: Palette.font-size * 1px;
                text: label;
            }
        }
    }
}


